# Auto detect text files and perform LF normalization
* text=auto

# Documents
*.md       text diff=markdown
*.txt      text
*.yml      text
*.yaml     text

# Python
*.py       text diff=python
*.pyw      text diff=python
*.pyx      text diff=python
*.pyz      text diff=python
*.pyd      binary

# Data files
*.csv      text
*.json     text
*.xml      text
*.ini      text

# Scripts
*.sh       text eol=lf
*.bat      text eol=crlf
*.cmd      text eol=crlf

# Web
*.html     text diff=html
*.css      text diff=css
*.js       text
*.ts       text

# Templates
*.jinja    text
*.jinja2   text

# SRT files
*.srt      text

# Archives
*.7z       binary
*.gz       binary
*.jar      binary
*.tar      binary
*.tgz      binary
*.zip      binary

# Graphics
*.png      binary
*.jpg      binary
*.jpeg     binary
*.gif      binary
*.ico      binary
*.svg      text

# Exclude files from exporting
.gitattributes export-ignore
.gitignore     export-ignore
.gitkeep       export-ignore 